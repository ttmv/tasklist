  <thead>
    <tr>
      <% if tasks.length > 0 and tasks.first.type == "Subtask" %>
        <th><%= link_to 'Name', subtasks_path(order:"name") %></th>
        <th><%= link_to 'Date', subtasks_path(order:"date") %></th>
        <th><%= link_to 'Priority', subtasks_path(order:'priority') %></th>
        <th>Main Task</th>
      <% else %>
        <th><%= link_to 'Name', tasks_path(order:"name") %></th>
        <th><%= link_to 'Date', tasks_path(order:"date") %></th>
        <th><%= link_to 'Priority', tasks_path(order:'priority') %></th>
      <% end %>
    </tr>
  </thead>
