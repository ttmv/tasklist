<p id="notice"><%= notice %></p>

<h2>  <%= @user.username %> </h2>

<p>
  <h4>Tasks:</h4>
  <ul>
    <% @user.main_tasks.unfinished.each do |task| %>
      <li> <%= link_to task.name, task %> <%= task.date %> </li>
      <ul>
        <% task.subtasks.unfinished.each do |subtask| %>
          <li> <%= link_to subtask.name, subtask %> <%= subtask.date %> </li>
        <% end %>
      </ul>
    <% end %>
  </ul>
</p>
<p>
  <%= link_to 'New task', new_task_path %>
  <%= link_to 'New category', new_category_path %>
</p>
<%= link_to 'Edit', edit_user_path(@user) %> |
<%= link_to 'Back', users_path %>
