<h1>Listing priorities</h1>

<table>
  <thead>
    <tr>
      <th>Value</th>
      <th>Description</th>
    </tr>
  </thead>

  <tbody>
    <% @priorities.each do |priority| %>
      <tr>
        <td><%= link_to priority.value, priority %></td>
        <td><%= link_to priority.description, priority if priority.description %></td>
        <% if current_user %>
          <td><%= link_to 'Edit', edit_priority_path(priority) %></td>
          <td><%= link_to 'Destroy', priority, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if current_user %>
  <%= link_to 'New Priority', new_priority_path %>
<% end %>
